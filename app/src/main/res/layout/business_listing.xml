<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/listing"
        android:layout_margin="5dp"
        app:cardPreventCornerOverlap="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/cardviewoutline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewCoverImage"
                android:background="@drawable/imageviewoutline"
                android:padding="5dp"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:src="@drawable/tourandtravels" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewListingName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginStart="180dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/textfieldoutline"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:autoLink="all"
                    android:background="@drawable/textfieldoutline"/>
                <TextView
                    android:id="@+id/textViewPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:autoLink="all"
                    android:background="@drawable/textfieldoutline"/>
                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:autoLink="all"
                    android:background="@drawable/textfieldoutline" />

                <Button
                    android:id="@+id/buttonOffers"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/buttonoutline"
                    android:text="Offers"
                    android:textColor="#FCFCFC" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>