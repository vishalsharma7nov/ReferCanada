<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/viewPager"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Tours And Travels"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="monospace"
                        android:text="Express Avenue Mall, Los Angeles"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:textSize="12sp" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="75dp"
                        android:numStars="5"
                        android:theme="@style/RatingBar" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="240dp"
                        android:layout_marginEnd="30dp"
                        android:background="#FCFCFC"
                        android:src="@drawable/ic_phone_android_black_24dp" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="174dp"
                        android:background="#FCFCFC"
                        android:src="@drawable/ic_location_on_black_24dp" />

                    <ImageButton
                        android:id="@+id/imageButtonMail"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="26dp"
                        android:background="#FCFCFC"
                        android:src="@drawable/ic_mail_black_24dp" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="99dp"
                        android:layout_marginTop="0dp"
                        android:background="#FCFCFC"
                        android:src="@drawable/ic_sms_black_24dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/buttonoutline"
                        android:textColor="#FCFCFC"
                        android:fontFamily="monospace"
                        android:text="Offers"
                        android:textStyle="bold" />

                </RelativeLayout>


                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:src="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <TextView
                    android:text="@string/productandservices"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:src="@drawable/gallery3" />

                        <TextView
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentStart="true"
                            android:text="ULTRA DELUXE ROOMS" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Price: $450"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:text="$940"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="right"
                                android:background="@drawable/strike"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                        <TextView
                            android:text="Product/Services"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Wi-Fi, Air Contitioner, Swimming Pool, Bathroom , Bar , TV, Spa, Music, Parking"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/buttonoutline"
                            android:layout_alignParentStart="true"
                            android:text="Book now" />

                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:src="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Write Your Reviews"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Writing great reviews may help others discover the places that are just apt for them. Here are a few tips to write a good review:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:padding="10dp"
                        android:layout_marginTop="20dp"
                        android:hint="Full Name"
                        android:background="@drawable/textfield"
                        android:singleLine="true"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="Mobile"
                        android:background="@drawable/textfield"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/textfield"
                        android:hint="Email Id"
                        android:singleLine="true"
                        android:inputType="text|textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/textfield"
                        android:hint="City"
                        android:singleLine="true"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="Write Review"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:background="@drawable/textfield"
                        android:minLines="6"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:scrollbars="vertical"/>

                    <RatingBar
                        android:id="@+id/ratingbarUserReview"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:numStars="5"
                        android:theme="@style/RatingBar" />

                    <Button
                        android:layout_marginTop="10dp"
                        android:text="Submit Review"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/buttonoutline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:src="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />


                <LinearLayout
                    android:paddingBottom="50dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Reviews"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/gallery3"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="150dp"
                            android:layout_marginTop="20dp"
                            android:text="Jacob Michael"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="150dp"
                            android:layout_marginTop="50dp"
                            android:text="19th January 2017" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="130dp"
                            android:text="Good service... nice and clean rooms... very good spread of buffet and friendly staffs. Located in heart of city and easy to reach any places in a short distance." />


                    </RelativeLayout>

                    <RatingBar
                        android:id="@+id/ratingbarReviewed"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:theme="@style/RatingBar" />

                </LinearLayout>



            </LinearLayout>



</RelativeLayout>